<% layout('layouts/boilerplate') -%>

<!-- Example flash messages block in your index.ejs or show.ejs -->
<% if (success && success.length > 0) { %>
  <div class="alert alert-success alert-dismissible fade show" role="alert">
    <% success.forEach(msg => { %>
      <p><%= msg %></p>
    <% }); %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>

<% } else if (error && error.length > 0) { %>
  <div class="alert alert-danger alert-dismissible fade show" role="alert">
    <% error.forEach(msg => { %>
      <p><%= msg %></p>
    <% }); %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% } %>

<body>
    <h3 class="abc-xyz">Listings</h3>
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
        <% for(let list of listings) { %>
            <div class="card" style="width: 18rem;">
                <div class="card-image-overlay">
                    <a href="/listings/<%= list._id %>"><img src="<%= list.image %>" class="card-img-top" alt="Listing image" style="height: 20rem"></a>
                </div>
                <div class="card-body">
                    <h5 class="card-title"><b><%= list.title %></b></h5>
                    <p class="card-text">&#8377;<%= list.price.toLocaleString("en-IN") %>/night</p>
                    <a href="<%= list.image %>" class="btn btn-dark">Expand image</a>
                </div>
            </div>
        <% } %>
    </div>
    
    
</body>
